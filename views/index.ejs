<% layout('layout/Boilerplate') %>
<div class="container text-center">
  <h1 class="mb-2">Campgrounds near you</h1>
  <a href="/campgrounds/new" class="btn btn-warning mb-3">New campgrounds</a>
  <%for(let post of campground){%>
    <div class="row">
      <div class="col-3"></div>
      <div class="col-6">
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="<%= post.image %>" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <h6 class="card-text text-muted"><%= post.location %></h6>
            <p class="card-text"><%= post.description%></p>
            <a class="card-link btn btn-info" href="/campgrounds/<%=post._id%>">Visit <%= post.title %></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  <%}%>
</div>

